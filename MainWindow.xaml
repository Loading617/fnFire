<Window x:Class="fnFireApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="fnFire" Height="350" Width="400">
    <StackPanel Margin="10">
        <TextBlock FontWeight="Bold" FontSize="16" Text="Fn Key Binder" Margin="0 0 0 10"/>
        <ComboBox x:Name="FunctionKeyCombo" Margin="0 0 0 10">
            <ComboBoxItem>F1</ComboBoxItem>
            <ComboBoxItem>F2</ComboBoxItem>
            <ComboBoxItem>F3</ComboBoxItem>
            <ComboBoxItem>F4</ComboBoxItem>
            <ComboBoxItem>F5</ComboBoxItem>
            <ComboBoxItem>F6</ComboBoxItem>
            <ComboBoxItem>F7</ComboBoxItem>
            <ComboBoxItem>F8</ComboBoxItem>
            <ComboBoxItem>F9</ComboBoxItem>
            <ComboBoxItem>F10</ComboBoxItem>
            <ComboBoxItem>F11</ComboBoxItem>
            <ComboBoxItem>F12</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="ActionTextBox" PlaceholderText="Enter command or text..." Margin="0 0 0 10"/>
        <Button Content="Bind Key" Click="BindKey_Click" Margin="0 0 0 10"/>
        <TextBlock x:Name="StatusTextBlock" Foreground="Green"/>
    </StackPanel>
</Window>

